<div class="container p-5">
<%= render 'admin/shared/error_messages', resource: @genre %>
  <div class="row">
    <div class="col-6 mx-auto pb-4">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @genre, url: admin_genre_path(@genre),method: :patch do |f| %>
        <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
        <td><%= f.text_field :genre_name, class: "mr-5" %></td>
        <td><%= f.submit "変更を保存", class: "btn btn-primary" %></td>
      <% end %>
    </div>
  </div>
</div>