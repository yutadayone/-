<div class="container p-5">
  <div class="row">
    <h1>会員一覧</h1>
    <table class='table'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to admin_customer_path(user.id) do %><%= user.last_name %><%= user.first_name %><% end %></td>
            <td><%= user.email %></td>
            <td><% if user.is_deleted %>
            退会
            <% else %>
            有効
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%#= paginate @customers %>
  </div>
</div>