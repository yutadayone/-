<div class="container p-5">
  <div class="row offset-md-1">
    <h1>商品詳細</h1>
</div>
  <div class="row">
    <div class="col-4">
    </div>
    <div class="col-8">
      <table>
        <tr>
          <th>商品名</th>
          <td><%= @item.item_name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.genre_name %></td>
        </tr>
      </table>
      <div class="button text-center">
      <%= link_to '商品編集', edit_item_path(@item), class:"btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
</div>