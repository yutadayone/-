<div class="container mt-3">
  <div class="row">
    <div class="col-6 d-grid gap-2 mx-auto">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :'名前' %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

        <div class="field">
          <%= f.label :'フリガナ' %><br />
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :'郵便番号' %><br />
          <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </div>

        <div class="field">
          <%= f.label :'住所' %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :'電話番号' %><br />
          <%= f.telephone_field :tel, autofocus: true, autocomplete: "tel" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions m-3">
          <%= f.submit "Sign up", class:'btn btn-outline-primary' %>
        </div>
      <% end %>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>